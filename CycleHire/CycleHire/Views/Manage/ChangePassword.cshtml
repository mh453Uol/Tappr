@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h2 class="ui header">@ViewData["Title"]</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="ui form">
    <form method="post">
        <div asp-validation-summary="All" class="red-text"></div>
        <div class="ui field">
            <label asp-for="OldPassword"></label>
            <input asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" class="red-text"></span>
        </div>
        <div class="ui field">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="red-text"></span>
        </div>
        <div class="ui field">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="red-text"></span>
        </div>
        <button type="submit" class="ui primary button">Update password</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
