@model ApplicationUser
@{
    ViewData["Title"] = "Payment Setting";
    ViewData.AddActivePage(ManageNavPages.PaymentPlatforms);

}

<h2 class="ui header">@ViewData["Title"]</h2>

@if (Model.IsHostStripeConnected())
{
    <div class="ui divided list">
        <div class="item">
            <i class="large credit card stripe icon"></i>
            <div class="content">
                <a class="header">Stripe</a>
                <div class="description">(Default Payment Gateway)</div>
            </div>
        </div>
    </div>

}